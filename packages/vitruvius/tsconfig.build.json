{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./build/esm",
		"declarationDir": "./build/types",
		"rootDir": "./src",
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": false,
		"removeComments": false,
		"sourceMap": false,
		"noEmit": false,
		"listFiles": false,
		"listEmittedFiles": true
	},
	"include": [
		"./src"
	]
}
