{
	"extends": ["../../.eslintrc.json"],
	"settings": {
		"import/resolver": {
			"typescript": {
				"alwaysTryTypes": true,
				"project": "./tsconfig.eslint.json"
			}
		}
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"parser": "@typescript-eslint/parser",
		"project": "./tsconfig.eslint.json",
		"projectFolderIgnoreList": [
			"./node_modules",
			"./.stryker-tmp",
			"./build",
			"./reports"
		]
	},
	"ignorePatterns": ["./build", "./reports", "*.js", "src/fetch.d.ts"],
	"rules": {
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true,
				"optionalDependencies": true,
				"peerDependencies": true,
				"bundledDependencies": true,
				"packageDir": ["../../", "./"]
			}
		]
	},
	"overrides": [
		{
			"files": ["*.spec.mts"],
			"rules": {
				"max-len": "off"
			}
		}
	]
}
